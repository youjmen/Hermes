<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hermes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/calmingCoral</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/calmingCoral</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/calmingCoralHalf</item>
        <item name="android:fontFamily">@font/spoqahansansneolight</item>
        <item name="android:includeFontPadding">false</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="colorPrimary">@color/lightBlack</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">@color/calmingCoralHalf</item>
    </style>

    <style name="LightText" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/spoqahansansneolight</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="RegularText" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/spoqahansansneoregular</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="BoldText" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/spoqahansansneobold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>